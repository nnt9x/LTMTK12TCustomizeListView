<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="#EEEEEE">
    
    <ImageView
        android:id="@+id/imgItemFilm"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvItemFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/imgItemFilm"
        app:layout_constraintTop_toTopOf="@id/imgItemFilm"/>

    <TextView
        android:id="@+id/tvItemFilmDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemFilmName"
        app:layout_constraintLeft_toRightOf="@id/imgItemFilm" />

    <TextView
        android:id="@+id/tvItemFilmScore"
        android:layout_width="60dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFF00"
        android:text="4.5"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/imgItemFilm"
        app:layout_constraintTop_toBottomOf="@id/tvItemFilmDescription"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgItemFilm"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemFilmScore"
        app:layout_constraintBottom_toBottomOf="@id/imgItemFilm"
        android:text="Watch"/>

</androidx.constraintlayout.widget.ConstraintLayout>